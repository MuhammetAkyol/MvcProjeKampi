@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "GetDraftMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Taslaklar Sayfası Mesajları</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("ContactPartial", "Contact")
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Gelen Mesaj Detayları</h3>
                            <div class="card-tools">
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>@Html.DisplayFor(x => x.Subject)</h5>
                                <br />
                                <h6>
                                    Alıcı: @Html.DisplayFor(x => x.ReceiverMail)
                                    <span class="mailbox-read-time float-right">@DateTime.Parse(Html.DisplayFor(x => x.MessageDate).ToString()).ToShortDateString()</span>
                                </h6>
                            </div>
                            <div class="mailbox-read-message">
                                <p>@Html.DisplayFor(x => x.MessageContent)</p>
                            </div>
                        </div>



                    </div>
                    <form action="@Url.Action("ToggleMessageStatus", "Message")" method="post">
                        <input type="hidden" name="id" value="@Model.MessageID" />
                        @if (Model.messagestatus)
                        {
                            <button type="submit" class="btn btn-danger">Taslağı Geri Al</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">Taslağı Gönder</button>
                        }
                    </form>
                    <br />
                    <form action="@Url.Action("ToggleMessageRemove", "Message")" method="post">
                        <input type="hidden" name="id" value="@Model.MessageID" />
                        @if (Model.messageremove)
                        {
                            <button type="submit" class="btn btn-danger">Taslağı Geri Al</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">Taslağı Sil</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
